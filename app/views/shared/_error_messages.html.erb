<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t ".error_notification" %> <%= pluralize @user.errors.count, t(".error") %>.
      <ul class= "list-unstyled">
        <% @user.errors.full_messages.each do |msg| %>
          <li><i class="fa fa-exclamation-triangle"></i> <%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
